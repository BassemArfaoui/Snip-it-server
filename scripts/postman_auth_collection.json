    {
      "name": "Auth",
      "item": [
        {
          "name": "1. Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Check response status\n",
                  "pm.test('Status code is 201', function () {\n",
                  "    pm.response.to.have.status(201);\n",
                  "});\n",
                  "\n",
                  "// Check response body\n",
                  "pm.test('Response contains success message', function () {\n",
                  "    const jsonData = pm.response.json();\n",
                  "    pm.expect(jsonData.message).to.include('Registration successful');\n",
                  "});\n",
                  "\n",
                  "// Log for reference\n",
                  "console.log('User registered successfully. Check your email for OTP.');"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"username\": \"testuser123\",\n  \"password\": \"SecurePass123!\",\n  \"fullName\": \"Test User\",\n  \"imageProfile\": \"https://example.com/avatar.jpg\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "register"
              ]
            }
          }
        },
        {
          "name": "2. Verify Email with OTP",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Note: You need to capture the OTP from console logs when seeding or from email\n",
                  "// Default test OTP (check server logs): usually 6 random digits\n",
                  "console.log('OTP will be printed in server console during registration');\n",
                  "console.log('Check scripts/seed/seed.service.ts or server logs for actual OTP');"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Check response status\n",
                  "pm.test('Status code is 200', function () {\n",
                  "    pm.response.to.have.status(200);\n",
                  "});\n",
                  "\n",
                  "// Check response contains tokens\n",
                  "pm.test('Response contains tokens', function () {\n",
                  "    const jsonData = pm.response.json();\n",
                  "    pm.expect(jsonData.tokens).to.exist;\n",
                  "    pm.expect(jsonData.tokens.accessToken).to.exist;\n",
                  "    pm.expect(jsonData.tokens.refreshToken).to.exist;\n",
                  "});\n",
                  "\n",
                  "// Save tokens for later use\n",
                  "const jsonData = pm.response.json();\n",
                  "pm.environment.set('accessToken', jsonData.tokens.accessToken);\n",
                  "pm.environment.set('refreshToken', jsonData.tokens.refreshToken);\n",
                  "\n",
                  "pm.test('Response contains success message', function () {\n",
                  "    const jsonData = pm.response.json();\n",
                  "    pm.expect(jsonData.message).to.include('verified successfully');\n",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/verify-email",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "verify-email"
              ]
            }
          }
        },
