                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"status is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "pm.test(\"response has data array and meta\", function () {",
                                    "    const json = pm.response.json();",
                                    "    pm.expect(json).to.have.property('data');",
                                    "    pm.expect(json.data).to.be.an('array');",
                                    "    pm.expect(json).to.have.property('meta');",
                                    "    pm.expect(json.meta).to.have.property('page');",
                                    "    pm.expect(json.meta).to.have.property('limit');",
                                    "});",
                                    "pm.test(\"post items include expected fields when present\", function () {",
                                    "    const json = pm.response.json();",
                                    "    if (!json.data.length) {",
                                    "        return;",
                                    "    }",
                                    "    const post = json.data[0];",
                                    "    pm.expect(post).to.have.property('id');",
                                    "    pm.collectionVariables.set('post_id', String(post.id));",
                                    "    pm.expect(post).to.have.property('title');",
                                    "    pm.expect(post).to.have.property('description');",
                                    "    pm.expect(post).to.have.property('author');",
                                    "    pm.expect(post).to.have.property('snippet');",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "response": []
